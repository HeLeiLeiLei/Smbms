<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!--字符编码过滤器-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.hl.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--主页权限验证-->
    <filter>
        <filter-name>sysFilter</filter-name>
        <filter-class>com.hl.filter.sysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>sysFilter2</filter-name>
        <filter-class>com.hl.filter.sysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sysFilter2</filter-name>
        <url-pattern>/sys/*</url-pattern>
    </filter-mapping>

    <!--配置Session过期时间-->
    <session-config>
        <!--配置时间为30分钟后session过期-->
        <session-timeout>30</session-timeout>
    </session-config>

    <!--设置欢迎页面-->
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>

    <!--配置login的servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hl.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <!--配置LoginOut的servlet-->
    <servlet>
        <servlet-name>LoginOutServlet</servlet-name>
        <servlet-class>com.hl.servlet.user.LoginOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginOutServlet</servlet-name>
        <url-pattern>/loginout.do</url-pattern>
    </servlet-mapping>
    <!--配置User的servlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.hl.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/sys/userDao.dao</url-pattern>
    </servlet-mapping>
    <!--配置>Provider的servlet-->
    <servlet>
        <servlet-name>ProviderServlet</servlet-name>
        <servlet-class>com.hl.servlet.provider.ProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderServlet</servlet-name>
        <url-pattern>/sys/Provider.dao</url-pattern>
    </servlet-mapping>
    <!--配置>Provider的servlet-->
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.hl.servlet.Bill.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/sys/Bill.dao</url-pattern>
    </servlet-mapping>

</web-app>